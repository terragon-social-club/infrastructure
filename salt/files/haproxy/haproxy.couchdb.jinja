global
    daemon
    maxconn 1000
    log /dev/log local0
    tune.ssl.cachesize 1000000
    tune.ssl.default-dh-param 2048

defaults
    # refer to the global log definition
    log global
    # disable logging of normal, successful connections
    option dontlog-normal
    mode http
    # Enable logging of HTTP request, session state and timers
    option httplog
    timeout connect 2000ms
    timeout client 120000ms
    timeout server 120000ms

frontend http-in
    bind *:80
    bind *:443 ssl crt /usr/local/etc/letsencrypt/live/{{ grains['fqdn'] }}/{{ grains['fqdn'] }}.pem
    redirect scheme https if !{ ssl_fc }
    default_backend servers

backend servers
    {% for address in salt['mine.get']('G@roles:couchdb and not G@roles:haproxy', 'network.interface_ip', tgt_type='compound').items() %}server couchdb{{ loop.index }} {{ address[1] }}:5984 maxconn 500 check on-marked-down shutdown-sessions
    {% endfor %}
